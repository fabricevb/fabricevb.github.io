---
import BaseLayout from "../layouts/BaseLayout.astro";
import projects from "../../content/projects.json";
import ProjectFilter from "../components/ProjectFilter.astro";
---
<BaseLayout title="Portfolio" description="Interactive portfolio of analytics, NLP, and automation projects.">
  <section class="section container">
    <div class="section-title">
      <h2>Portfolio</h2>
      <span class="badge">Interactive filtering</span>
    </div>
    <p class="tagline">
      Explore a curated set of data science, econometrics, and legal-tech projects. Filter by theme,
      tools, or year to see the work most relevant to your needs.
    </p>
  </section>
  <ProjectFilter projects={projects} />
</BaseLayout>
