---
import BaseLayout from "../layouts/BaseLayout.astro";
import experience from "../../content/experience.json";
import education from "../../content/education.json";
import certifications from "../../content/certifications.json";
import Timeline from "../components/Timeline.astro";
---
<BaseLayout title="CV" description="Downloadable CV and professional timeline.">
  <section class="section container">
    <div class="section-title">
      <h2>Curriculum Vitae</h2>
      <a class="button primary" href="mailto:fabrice@example.com?subject=CV%20request">Request PDF</a>
    </div>
    <p class="tagline">
      Prefer a short version? The timeline below summarizes roles, education, and certifications.
      For the full PDF, request a copy via email.
    </p>
  </section>

  <section class="section container">
    <div class="section-title">
      <h2>Experience</h2>
      <span class="badge">Timeline</span>
    </div>
    <Timeline items={experience} />
  </section>

  <section class="section container">
    <div class="section-title">
      <h2>Education</h2>
      <span class="badge">Degrees</span>
    </div>
    <Timeline items={education} />
  </section>

  <section class="section container">
    <div class="section-title">
      <h2>Certifications</h2>
      <span class="badge">Credentials</span>
    </div>
    <ul class="list">
      {certifications.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </section>

  <section class="section container">
    <div class="section-title">
      <h2>Languages</h2>
      <span class="badge">Communication</span>
    </div>
    <div class="tags">
      <span class="tag">French (native)</span>
      <span class="tag">English (fluent)</span>
      <span class="tag">Dutch (fluent)</span>
    </div>
  </section>
</BaseLayout>
