---
import "../styles/global.css";
const { title, description } = Astro.props;
const canonical = new URL(Astro.url.pathname, Astro.site);
const metaTitle = title ? `${title} | Fabrice Van Boeckel` : "Fabrice Van Boeckel | Data Scientist";
const metaDescription =
  description ||
  "Data scientist bridging legal, economic, Artificial Intelligence, and NLP analytics with automation-ready delivery.";
const image = `${Astro.site}/og-image.svg`;
const schema = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Fabrice Van Boeckel",
  jobTitle: "Data Scientist",
  url: Astro.site,
  sameAs: ["https://www.linkedin.com/in/fabricevb/"],
  knowsAbout: ["NLP", "Data Science", "Artificial Intelligence", "Econometrics", "Legal Tech", "Automation"]
};
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{metaTitle}</title>
    <meta name="description" content={metaDescription} />
    <link rel="canonical" href={canonical} />
    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={image} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={metaTitle} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={image} />
    <link rel="icon" href="/favicon.ico" />
    <script type="application/ld+json">{JSON.stringify(schema)}</script>
  </head>
  <body>
    <header>
      <div class="container navbar">
        <a href="/" class="button" aria-label="Homepage">Fabrice Van Boeckel</a>
        <nav class="nav-links" aria-label="Main navigation">
          <a href="/about">
            <span class="lang-inline is-active" data-lang="en">About</span>
            <span class="lang-inline" data-lang="fr">À propos</span>
            <span class="lang-inline" data-lang="nl">Over</span>
          </a>
          <a href="/portfolio">
            <span class="lang-inline is-active" data-lang="en">Portfolio</span>
            <span class="lang-inline" data-lang="fr">Portfolio</span>
            <span class="lang-inline" data-lang="nl">Portfolio</span>
          </a>
          <a href="/case-studies">
            <span class="lang-inline is-active" data-lang="en">Case studies</span>
            <span class="lang-inline" data-lang="fr">Études de cas</span>
            <span class="lang-inline" data-lang="nl">Casestudy’s</span>
          </a>
          <a href="/publications">
            <span class="lang-inline is-active" data-lang="en">Publications</span>
            <span class="lang-inline" data-lang="fr">Publications</span>
            <span class="lang-inline" data-lang="nl">Publicaties</span>
          </a>
          <a href="/cv">
            <span class="lang-inline is-active" data-lang="en">CV</span>
            <span class="lang-inline" data-lang="fr">CV</span>
            <span class="lang-inline" data-lang="nl">CV</span>
          </a>
          <a href="/photography">
            <span class="lang-inline is-active" data-lang="en">Photography</span>
            <span class="lang-inline" data-lang="fr">Photographie</span>
            <span class="lang-inline" data-lang="nl">Fotografie</span>
          </a>
          <a href="/contact">
            <span class="lang-inline is-active" data-lang="en">Contact</span>
            <span class="lang-inline" data-lang="fr">Contact</span>
            <span class="lang-inline" data-lang="nl">Contact</span>
          </a>
        </nav>
        <div class="nav-actions">
          <button class="lang-toggle" type="button" data-lang-toggle>EN</button>
          <button class="theme-toggle" type="button" data-theme-toggle>Dark</button>
        </div>
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer class="footer">
      <div class="container footer-grid">
        <div>
          <strong>Fabrice Van Boeckel</strong>
          <p class="muted">
            <span class="lang-inline is-active" data-lang="en">Data science, Artificial Intelligence, and automation for legal and economic contexts.</span>
            <span class="lang-inline" data-lang="fr">Data science, Artificial Intelligence et automatisation pour les contextes juridiques et économiques.</span>
            <span class="lang-inline" data-lang="nl">Data science, Artificial Intelligence en automatisering voor juridische en economische contexten.</span>
          </p>
        </div>
        <div>
          <strong>
            <span class="lang-inline is-active" data-lang="en">Explore</span>
            <span class="lang-inline" data-lang="fr">Explorer</span>
            <span class="lang-inline" data-lang="nl">Verkennen</span>
          </strong>
          <ul class="list">
            <li>
              <a href="/portfolio">
                <span class="lang-inline is-active" data-lang="en">Projects</span>
                <span class="lang-inline" data-lang="fr">Projets</span>
                <span class="lang-inline" data-lang="nl">Projecten</span>
              </a>
            </li>
            <li>
              <a href="/case-studies">
                <span class="lang-inline is-active" data-lang="en">Case studies</span>
                <span class="lang-inline" data-lang="fr">Études de cas</span>
                <span class="lang-inline" data-lang="nl">Casestudy’s</span>
              </a>
            </li>
            <li>
              <a href="/publications">
                <span class="lang-inline is-active" data-lang="en">Publications</span>
                <span class="lang-inline" data-lang="fr">Publications</span>
                <span class="lang-inline" data-lang="nl">Publicaties</span>
              </a>
            </li>
            <li>
              <a href="/photography">
                <span class="lang-inline is-active" data-lang="en">Photography</span>
                <span class="lang-inline" data-lang="fr">Photographie</span>
                <span class="lang-inline" data-lang="nl">Fotografie</span>
              </a>
            </li>
          </ul>
        </div>
        <div>
          <strong>
            <span class="lang-inline is-active" data-lang="en">Contact</span>
            <span class="lang-inline" data-lang="fr">Contact</span>
            <span class="lang-inline" data-lang="nl">Contact</span>
          </strong>
          <ul class="list">
            <li><a href="https://www.linkedin.com/in/fabricevb/">LinkedIn</a></li>
          </ul>
        </div>
      </div>
    </footer>
    <script>
      const root = document.documentElement;
      const storedTheme = localStorage.getItem("theme");
      const supportedLangs = ["en", "fr", "nl"];
      const storedLang = supportedLangs.includes(localStorage.getItem("lang"))
        ? localStorage.getItem("lang")
        : "en";
      const themeToggle = document.querySelector("[data-theme-toggle]");
      const langToggle = document.querySelector("[data-lang-toggle]");
      const themeLabels = {
        light: { en: "Light", fr: "Clair", nl: "Licht" },
        dark: { en: "Dark", fr: "Sombre", nl: "Donker" }
      };
      const getThemeLabel = (theme) => {
        const currentLang = localStorage.getItem("lang") || "en";
        return themeLabels[theme]?.[currentLang] ?? themeLabels[theme].en;
      };

      const applyTheme = (theme) => {
        if (theme === "dark") {
          root.setAttribute("data-theme", "dark");
          themeToggle.textContent = getThemeLabel("light");
        } else {
          root.removeAttribute("data-theme");
          themeToggle.textContent = getThemeLabel("dark");
        }
      };

      const applyLang = (lang) => {
        document.querySelectorAll("[data-lang]").forEach((el) => {
          el.classList.toggle("is-active", el.dataset.lang === lang);
        });
        document.documentElement.lang = lang;
        langToggle.textContent = lang.toUpperCase();
        applyTheme(root.getAttribute("data-theme") === "dark" ? "dark" : "light");
      };

      const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
      applyTheme(storedTheme || (prefersDark ? "dark" : "light"));
      applyLang(storedLang);

      themeToggle?.addEventListener("click", () => {
        const newTheme = root.getAttribute("data-theme") === "dark" ? "light" : "dark";
        localStorage.setItem("theme", newTheme);
        applyTheme(newTheme);
      });

      langToggle?.addEventListener("click", () => {
        const currentLang = localStorage.getItem("lang") || "en";
        const newLang =
          currentLang === "en" ? "fr" : currentLang === "fr" ? "nl" : "en";
        localStorage.setItem("lang", newLang);
        applyLang(newLang);
      });
    </script>
  </body>
</html>
